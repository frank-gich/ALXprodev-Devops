#!/bin/bash

# Read and extract values using jq, sed, and awk from data.json
NAME=$(jq -r '.name' data.json | sed 's/.*/\u&/')  # Capitalize first letter
HEIGHT=$(jq -r '.height' data.json | awk '{printf "%.1f", $1 / 10}')  # Convert to meters
WEIGHT=$(jq -r '.weight' data.json | awk '{printf "%.0f", $1 / 10}')  # Convert to kg
TYPE=$(jq -r '.types[0].type.name' data.json | sed 's/.*/\u&/')  # Capitalize first letter

# Print the formatted sentence
echo "$NAME is of type $TYPE, weighs ${WEIGHT}kg, and is ${HEIGHT}m tall."
